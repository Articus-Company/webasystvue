{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "paths": {
            "@/*": ["./src/*"],
        },
        "moduleResolution": "bundler",
        "noEmit": true,
        "strict": true,
        "skipLibCheck": true
    },
    "references": [{ "path": "./tsconfig.node.json" }],
    "include": ["env.d.ts", "src/**/*.ts", "src/**/*.d.ts", "src/**/*.vue", "components.d.ts"]
}
